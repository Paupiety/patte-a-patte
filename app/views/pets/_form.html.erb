
  <%= form_with(model: @pet, local: true, html: { multipart: true }, class:"flex flex-col gap-3") do |form| %>

    <div class="flex flex-col gap-0.5">
      <%= form.label :first_name, "Prénom", class: 'label' %>
      <%= form.text_field :first_name, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="flex flex-col gap-0.5">
      <%= form.label :age, "Âge", class: 'label' %>
      <%= form.number_field :age, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="flex flex-col gap-0.5">
      <%= form.label :breed, "Race", class: 'label' %>
      <%= form.text_field :breed, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="flex flex-col gap-0.5">
      <%= form.label :sex, "Sexe", class: 'label' %>
      <%= form.select :sex, options_for_select(['Mâle', 'Femelle']), {}, {class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight"} %>
    </div>

    <div class="flex flex-col gap-0.5">
      <%= form.label :category_id, "Type d'animal", class: 'label' %>
      <%= form.collection_select :category_id, Category.all, :id, :type_animal, {}, { class: "input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" } %>
    </div>

    <div class="flex flex-col gap-0.5">
      <%= form.label :profile_picture, "Photo principale", class: 'label' %>
      <%= form.file_field :profile_picture, class: 'form-control input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight' %>
    </div>

  <div class="flex justify-between items-center mt-4">
      <div class="actions btn_primary w-fit h-fit">
        <% if @pet.new_record? %>
          <%= form.submit "Ajoutez un animal" %>
        <% else %>
          <%= form.submit "Enregistrer les modifications" %>
        <% end %>
      </div>

      <div class="actions btn_primary w-fit h-fit">
        <%= link_to "Retour", user_path(current_user), class: "btn_primary" %>
      </div>
    <% end %>
  </div>

