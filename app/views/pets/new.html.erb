  <div class="flex flex-col w-full items-center">
    <div class="flex flex-col gap-6 bg-complementary rounded px-8 pt-6 pb-8">
      <h1 class="text-3xl">Ajouter un animal</h1>
      <%= render 'form', pet: @pet %>
    </div>
  </div>
  <div class="absolute position-icon-cat3">
    <img class="max-sm:hidden w-full" src="<%= asset_path('illustrations/Cat_3.svg') %>" alt="Cat 3">
  </div>
</section>
