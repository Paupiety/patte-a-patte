<% content_for :title, "Adresse" %>
<% content_for :meta_description, "Modifier une adresse"%>

<%= form_with(model: @address, url: {controller: "addresses", action: "update"}, html: {class: "flex flex-col gap-4" }) do |f| %>
        <div class="flex flex-col gap-0.5">
          <%= f.label :zip_code, "Code postal", class: 'label' %>
          <%= f.text_field :zip_code, value: @address.zip_code, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :city_name, "Ville", class: 'label' %>
          <%= f.text_field :city_name, value: @address.city_name, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :address_name, "Adresse", class: 'label' %>
          <%= f.text_field :address_name, value: @address.address_name, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
        <%= f.label :phone_number, "Numéro de téléphone", class: 'label' %>
        <%= f.text_field :phone_number, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="actions btn_primary">
          <%= f.submit "Ajouter l'adresse" %>
        </div>
      </div>
<% end %>