 <% content_for :title, "Adresse" %>
<% content_for :meta_description, "Modifier une adresse"%>

<section class="mt-6 mb-6 p-12 flex flex-col gap-6 max-md:p-4 max-w-screen-2xl w-full max-sm:p-6 max-sm:mt-0 items-center self-center">

  <div class="flex flex-col w-full items-center">
    <div class="flex flex-col gap-2 bg-complementary rounded px-8 pt-6 pb-8 w-fit">
      <h1 class="text-3xl max-w-lg">Modifier mon adresse</h1>

      <%= form_with(model: @address, url: {controller: "addresses", action: "update"}, html: {class: "flex flex-col gap-4" }) do |f| %>
        <div class="flex gap-3">
          <div class="flex flex-col gap-0.5">
            <%= f.label :city_name, "Ville", class: 'label' %>
            <%= f.text_field :city_name, value: @address.city_name, class:"input   focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>

          <div class="flex flex-col gap-0.5">
            <%= f.label :zip_code, "Code postal", class: 'label' %>
            <%= f.text_field :zip_code, value: @address.zip_code, class:"input   focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>
        </div>

          <div class="flex flex-col gap-0.5">
            <%= f.label :address_name, "Adresse", class: 'label' %>
            <%= f.text_field :address_name, value: @address.address_name, class:"input   focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>


          <div class="flex gap-3 justify-between">
            <div class="actions btn_primary">
              <%= f.submit "Modifier" %>
            </div>
            <%= link_to "Retour", profil_path, class:"btn_primary" %>
          </div>
        </div>
    </div>
  </div>
  <% end %>
</section>