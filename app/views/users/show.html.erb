<section class="mt-12 p-14 flex flex-col gap-6 max-md:p-4">
  <h1 class="text-3xl">Informations publiques</h1>
  <div class="flex gap-6 w-full max-md:flex-col max-md:items-center">
    <div class="rounded-full overflow-hidden h-72 w-72 flex">
      <% if @user.profile_picture.attached? %>
        <%= image_tag @user.profile_picture, alt: "Photo de profil", class:"self-center" %>
      <%else%>
        <img src="<%= asset_path('logo/symbole_logo.svg')%>" alt="Logo Patte à patte">
      <%end%>
    </div>
    <div class="flex flex-col gap-3 w-2/5 max-md:w-auto">
      <div class="flex flex-col gap-2">
        <h2 class="text-xl"><%=@user.first_name%> <%=@user.last_name%></h2>
        <p><%=@user.description%>
      </div>
      <%= link_to "Modifier mon profil", edit_user_path(@user), class: "btn_primary" %>
    </div>
    <div class="bg-primary rounded p-10 w-2/5 flex flex-col g-6 items-center justify-between max-md:w-full">
      <div class="flex flex-col items-center gap-2">
        <h2 class="white text-xl">Mes animaux</h2>
        <p class=white>Vous n'avez pas ajouté d'animaux pour le moment.</p>
      </div>
      <%= link_to "Ajouter un animal", "#", class: "btn_secondary mt-6 min-w-max" %>
      <%# <div> %>
        <%# <%=@pet.profile_picture, alt: "Photo de profil"%>
        <%# <%=@pet.first_name%>
        <%# <%=@pet.age%>
      <%# </div>%>
    </div>
</section>

<section class="flex flex-col gap-6 p-14">
  <h1 class="text-3xl">Informations privées</h1>
  <div class="flex gap-6 justify-between max-md:flex-col-reverse max-md:items-center">
    <div class="flex flex-col gap-4">
      <%= form_for @user, html: { class: 'flex flex-col gap-4' } do |f| %>
        <div class="flex flex-col w-max gap-0.5">
          <%= f.label :email, "Email", class: 'label' %>
          <%= f.email_field :email, class: "input focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>
        <div class="actions">
          <%= f.submit "Enregistrer les modifications", class: 'btn_primary' %>
        </div>
      <%end%>
      <%= link_to "Informations de connexion", edit_user_registration_path(current_user), class: "btn_primary" %>

      <%# à faire : partie informations privées lorsqu'elles y seront%>
    </div>
    <div>
    <img class="min-w-28" src="<%= asset_path('illustrations/dog-swimming.svg')%>" alt="Batman qui nage">
  </div>
  </div>
</section>

<section class="p-14 flex flex-col gap-4">
  <div class="flex items-center justify-between bg-complementary p-4 rounded">
    <h1 class="text-3xl">Mes favoris</h1>
    <a href="#" class="bg-secondary p-1 w-fi rounded-full arrow_icon">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-10 h-10" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>  
      </svg>
    </a>
  </div>
  
  <div class="flex flex-col gap-4">
    <% @favorite_offers.each do |offer| %>
      <div class="bg-white p-4 rounded shadow">
        <h2 class="text-xl font-bold"><%= link_to offer.title, offer_path(offer) %></h2>
        <p><%= offer.description %></p>
        <p class="text-gray-500"><%= number_to_currency(offer.price, unit: "€") %></p>
        <div class="flex justify-between items-center mt-2">
          <small class="text-gray-500">Type d'animal: <%= offer.type_animal %></small>
          <small class="text-gray-500">Posté le <%= offer.created_at.strftime('%d/%m/%Y') %></small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="flex items-center justify-between bg-complementary p-4 rounded">
    <h1 class="text-3xl">Mes annonces</h1>
  </div>
  <div class="flex flex-col gap-4">
    <% @user.offers.each do |offer| %>
      <div class="bg-white p-4 rounded shadow">
        <h2 class="text-xl font-bold"><%= link_to offer.title, offer_path(offer) %></h2>
        <p><%= offer.description %></p>
        <p class="text-gray-500"><%= number_to_currency(offer.price, unit: "€") %></p>
        <div class="flex justify-between items-center mt-2">
          <small class="text-gray-500">Type d'animal: <%= offer.type_animal %></small>
          <small class="text-gray-500">Posté le <%= offer.created_at.strftime('%d/%m/%Y') %></small>
        </div>
      </div>
    <% end %>
  </div>
</section>
