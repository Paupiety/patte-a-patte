<section class="mt-12 p-14 flex flex-col gap-6 max-md:p-4">
  <h1 class="text-3xl">Informations publiques</h1>
  <div class="flex gap-6 w-full max-md:flex-col max-md:items-center">
    <div class="rounded-full overflow-hidden h-72 w-72 flex flex-col items-center justify-center">
      <% if @user.profile_picture.attached? %>
        <%= image_tag @user.profile_picture, alt: "Photo de profil", class:"self-center" %>
      <% else %>
        <img src="<%= asset_path('logo/symbole_logo.svg') %>" alt="Logo Patte à patte">
      <% end %>
    </div>
    <div class="flex flex-col gap-3 w-2/5 max-md:w-auto">
      <div class="flex flex-col gap-2">
        <h2 class="text-xl"><%= @user.first_name %> <%= @user.last_name %></h2>
        <p><%= @user.description %></p>
      </div>
      <div>
        <%= link_to "Modifier mon profil", edit_user_path(@user), class: "btn_primary" %>
      </div>
    </div>
    <div class="bg-primary rounded p-10 w-2/5 flex flex-col g-6 items-center justify-between max-md:w-full">
      <div class="flex flex-col items-center gap-2">
        <h2 class="white text-xl">Mes animaux</h2>
        <% if @user.pets.any? %>
          <div class="grid gap-4">
            <% @user.pets.each do |pet| %>
              <div class="flex flex-col items-center justify-center gap-2">
                <% if pet.profile_picture.attached? %>
                  <%= image_tag pet.profile_picture, alt: "Photo de #{pet.first_name}", class: "rounded-full h-20 w-20 object-cover" %>
                <% else %>
                  <div class="rounded-full h-20 w-20 bg-gray-300 flex items-center justify-center">
                    <span class="text-gray-500">Aucune image</span>
                  </div>
                <% end %>
                <h3 class="text-lg"><%= pet.first_name %></h3>
                <p><strong>Age:</strong> <%= pet.age %> ans</p>
                <p><strong>Race:</strong> <%= pet.breed %></p>
                <p><strong>Sexe:</strong> <%= pet.sex %></p>
                <!-- Ajoutez d'autres détails ici si nécessaire -->
                <%= link_to "Modifier son profil", edit_pet_path(pet), class: "btn_secondary mt-2 min-w-max" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="white">Vous n'avez pas ajouté d'animaux pour le moment.</p>
        <% end %>
      </div>
      <%= link_to "Ajouter un animal", new_pet_path, class: "btn_secondary mt-6 min-w-max" %>
    </div>
  </div>
</section>

<section class="flex flex-col gap-6 p-14">
  <h1 class="text-3xl">Informations privées</h1>
  <div class="flex gap-6 justify-between max-md:flex-col-reverse max-md:items-center">
    <div class="flex flex-col gap-3">
      <div class="flex justify-between gap-3 items-center w-full">
        <h2>Adresse de livraison</h2>
        <div class="rounded-full p-2 bg-secondary h-fit w-fit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
          </svg>
        </div>
      </div>
      <div>
        <% @user.user_addresses.each do |user_address| %>
          <p><%= user_address.address.address_name %></p>
          <p><%= user_address.address.zip_code %> <%= user_address.address.city_name %></p>
          <!-- Afficher d'autres détails de l'adresse selon votre structure -->
        <% end %>
      </div>
      <div class="flex flex-col gap-4">
        <%= link_to "Informations de connexion", edit_user_registration_path(current_user), class: "btn_primary mt-6 min-w-max" %>
      </div>
    </div>
    <div>
      <img class="min-w-28" src="<%= asset_path('illustrations/dog-swimming.svg') %>" alt="Batman qui nage">
    </div>
  </div>
</section>

