<section class="flex flex-col section mb-24 mt-24">
  <div class="flex flex-col w-full items-center mt-20">
    <div class="flex flex-col gap-2 bg-complementary rounded px-8 pt-6 pb-8">
      <h1 class="text-3xl">Modifier mon profil</h1>
      <%= form_for @user, html: { multipart: true, class: 'needs-validation', novalidate: true, class: "flex flex-col gap-4" } do |f| %>
        <div class="flex flex-col gap-0.5">
          <%= f.label :first_name, "Prénom", class: 'label' %>
          <%= f.text_field :first_name, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :last_name, "Nom", class: 'label' %>
          <%= f.text_field :last_name, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :email, "Email", class: 'label' %>
          <%= f.email_field :email, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :description, "Description", class: 'label' %>
          <%= f.text_area :description, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="flex flex-col gap-0.5">
          <%= f.label :profile_picture, "Photo de profil", class: 'label' %>
          <%= f.file_field :profile_picture, class: 'download_image' %>
        </div>

        <div class="actions btn_primary">
          <%= f.submit "Enregistrer les modifications" %>
        </div>
        <div class="absolute bottom-icone-form_dog_smelling">
        <img class="min-w-28 max-sm:hidden" src="<%= asset_path('illustrations/dog-smelling.svg') %>" alt="Batman qui déchire le journal">
      </div>
      </div>
    <% end %>
    </div>
  </div>
</section>
