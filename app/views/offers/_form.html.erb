<section class="flex flex-col section mb-24 mt-24">
  <div class="flex flex-col w-full items-center">
    
    <div class="flex flex-col gap-6 bg-complementary rounded p-8">
      <h1 class="text-3xl">DÃ©poser une annonce</h1>
      <%= form_for @offer, html: { multipart: true, class: 'needs-validation', novalidate: true, class: "flex flex-col gap-4" } do |f| %>

      <div class="flex flex-col gap-0.5">
        <%= f.label :type_offer_id, "Type d'annonce", class: "label" %>
        <%= f.select :type_offer_id, Typeoffer.all.collect { |t| [t.type_offer, t.id] }, {}, class: "form-control border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight type_offer_select" %>
      </div>

        <div class="type_offer_section_1 flex flex-col gap-0.5">
          <%= f.label :title, "Titre", class: "label" %>
          <%= f.text_field :title, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
        </div>

        <div class="type_offer_section_1 flex gap-6 items-center">
          <div class="type_offer_section_1 flex flex-col gap-0.5">
            <%= f.label :description, "Description", class: "label" %>
            <%= f.text_area :description, class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>

          <div class="type_offer_section_1 flex gap-6 items-center">
            <div class="flex flex-col gap-0.5">
              <%= f.label :price, "Prix", class: "label" %>
              <div class="type_offer_section_p">
                <%= f.select :price_type, [['Fixe'], ['Horaire'], ['Journalier']], {}, class: "form-control border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight type_offer_select" %>
              </div>
            </div>
            <%= f.text_field :price, inputmode: "numeric", pattern: "\d*", class:"input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>

          <div class="type_offer_section_1 flex flex-col gap-0.5 w-full">
            <%= f.label :type_animal, "Type d'animal", class: "label" %>
            <%= f.select :type_animal, Category.all.collect { |c| [c.type_animal] }, {}, class: "w-full form-control border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight" %>
          </div>
        </div>

        <div class="type_offer_section_2 flex flex-col gap-0.5">
          <%= f.label :image, "Rajouter des images", class: 'label'%> 
          <%= f.file_field :image, class: 'form-control input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight' %> 
          <%= f.file_field :photo_1, class: 'form-control input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight' %> 
          <%= f.file_field :photo_2, class: 'form-control input border-transparent focus:border-0 appearance-none rounded w-full py-2 px-3 leading-tight' %> 
        </div>

        <div class="actions btn_primary">
          <%= f.submit "Enregistrer" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<script src="<%= asset_path 'offer_form.js' %>"></script>