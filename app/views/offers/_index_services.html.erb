<section>
  
  <div class="py-12 sm:py-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-3xl">Coup de patte</h1>
      </div>
      <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        <% if @offers.any? %>
          <% @offers.each do |offer| %>
            <article class="flex max-w-xl flex-col items-start gap-5">
              <div class="group relative h-64 w-full">
                <% if offer.image.attached? %>
                  <%= link_to offer_path(offer) do %>
                    <%= image_tag offer.image, alt: 'image', class: "w-full h-full rounded-lg object-cover" %>
                  <% end %>
                <% end %>
              </div>

              <div class="relative flex gap-x-4 justify-between w-full">
                <div class="flex flex-col gap-1">
                  <h2 class="text-2xl">
                    <%= link_to offer.title, offer_path(offer) %>
                  </h2>
                    <h3 class="font-bold text-1xl">
                      <%= offer.price %> â‚¬
                    </h3>
                    <p class="italic text-xs"><%= offer.created_at.strftime('%d/%m/%y') %></p>
                </div>
                  <% if user_signed_in? %>
                  <div class="flex gap-3">
                    <%= button_to offer_cart_offers_path(offer.id), method: :post, class:"relative p-1 flex gap-2 bg-secondary rounded-full p-3 h-fit w-fit" do%>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="svg bi bi-basket" viewBox="0 0 16 16">
                        <path d="M5.757 1.071a.5.5 0 0 1 .172.686L3.383 6h9.234L10.07 1.757a.5.5 0 1 1 .858-.514L13.783 6H15a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1v4.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 13.5V9a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h1.217L5.07 1.243a.5.5 0 0 1 .686-.172zM2 9v4.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9zM1 7v1h14V7zm3 3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 4 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 6 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3A.5.5 0 0 1 8 10m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5m2 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5"/>
                      </svg>
                    <%end%>

                    <button type="button" class="relative p-1 bg-secondary rounded-full p-3 h-fit w-fit">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="svg bi bi-heart" viewBox="0 0 16 16">
                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                      </svg>
                    </button>
                  </div>
                  <% end %>
                
              </div>
            </article>
          <% end %>
        <% else %>
          <p>Aucune offre disponible pour le moment.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
